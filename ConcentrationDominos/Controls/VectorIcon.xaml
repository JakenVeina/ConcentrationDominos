<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Class="ConcentrationDominos.Controls.VectorIcon"
             mc:Ignorable="d">
    <Viewbox Stretch="Uniform">
        <Path Data="{Binding Definition.Geometry, RelativeSource={RelativeSource AncestorType=UserControl}}"
              Width="{Binding Definition.NativeWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
              Height="{Binding Definition.NativeHeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
              Fill="{Binding Brush, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Viewbox>
</UserControl>
